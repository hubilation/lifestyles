type User {
  id: ID! @unique
  email: String @unique
  name: String!
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission!]!
}

enum Permission {
  ADMIN
  USER
  TRAINER
}

enum SetType {
  REPS
  TIME
}

type Session {
  id: ID! @unique
  user: User! @relation(name: "SessionToUser")
  trainer: User @relation(name: "SessionToTrainer")
  exercises: [SessionExercise]!
  createdAt: DateTime!
  completed: Boolean!
}

type Exercise {
  id: ID! @unique
  name: String!
  muscleGroup: String
  description: String
  setType: SetType!
}

type SessionExercise {
  id: ID! @unique
  session: Session!
  exercise: Exercise!
  sets: [SessionExerciseSet]!
}

type SessionExerciseSet {
  id: ID! @unique
  sessionExercise: SessionExercise!
  setNumber: Int!
  amount: Int!
  type: SetType!
}